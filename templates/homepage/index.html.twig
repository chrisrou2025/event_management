{% extends 'base.html.twig' %}

{% block title %}Accueil - Gestion des événements{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <i class="fas fa-calendar-alt fa-2x text-primary"></i>
                    </div>
                    <div>
                        <h1 class="h2 mb-1">Gestion des événements</h1>
                        <p class="text-muted mb-0">Organisez et gérez tous vos événements</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-md-end">
                <a href="{{ path('app_evenement_new') }}" class="btn btn-success">
                    <i class="fas fa-plus-circle"></i> Créer un événement
                </a>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Total des événements</h5>
                        <p class="card-text display-4">{{ total_evenements }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Total des participants</h5>
                        <p class="card-text display-4">{{ total_participants }}</p>
                    </div>
                </div>
            </div>
        </div>

        {% if evenements_avenir|length > 0 %}
            <section class="mb-5">
                <div class="d-flex align-items-center mb-3">
                    <h3 class="h4 mb-0">
                        <span class="badge bg-success me-2">{{ evenements_avenir|length }}</span>
                        Événements à venir
                    </h3>
                </div>
                <div class="row">
                    {% for evenement in evenements_avenir %}
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm border-start border-success border-3">
                                {% if evenement.image %}
                                    <img src="{{ asset('uploads/images/events/' ~ evenement.image) }}" alt="{{ evenement.titre }}" class="card-img-top" style="max-height: 150px; object-fit: cover;">
                                {% endif %}
                                <div class="card-header bg-success bg-gradient text-white">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="card-title mb-0 text-truncate">{{ evenement.titre }}</h5>
                                        <span class="badge bg-light text-dark">
                                            <i class="fas fa-users"></i> {{ evenement.participants|length }}
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="mb-2">
                                        <small class="text-success fw-bold">
                                            <i class="fas fa-calendar"></i> 
                                            {{ evenement.date|date('d/m/Y à H:i') }}
                                        </small>
                                    </div>
                                    <div class="mb-3">
                                        <small class="text-muted">
                                            <i class="fas fa-map-marker-alt"></i> 
                                            {{ evenement.lieu }}
                                        </small>
                                    </div>
                                    {% if evenement.description %}
                                        <p class="card-text">
                                            {{ evenement.description|length > 80 ? evenement.description|slice(0, 80) ~ '...' : evenement.description }}
                                        </p>
                                    {% endif %}
                                    {% set jours_restants = date(evenement.date).diff(date()).days %}
                                    {% if jours_restants == 0 %}
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-clock"></i> Aujourd'hui
                                        </span>
                                    {% elseif jours_restants <= 7 %}
                                        <span class="badge bg-info">
                                            <i class="fas fa-hourglass-half"></i> Dans {{ jours_restants }} jour(s)
                                        </span>
                                    {% endif %}
                                </div>
                                <div class="card-footer bg-white">
                                    <div class="btn-group w-100" role="group">
                                        <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="btn btn-outline-success btn-sm">
                                            <i class="fas fa-eye"></i> Détails
                                        </a>
                                        <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </section>
        {% endif %}

        {% if derniers_evenements|length > 0 %}
            <section class="mb-5">
                <div class="d-flex align-items-center mb-3">
                    <h3 class="h4 mb-0">
                        <span class="badge bg-primary me-2">{{ derniers_evenements|length }}</span>
                        Derniers événements ajoutés
                    </h3>
                </div>
                <div class="row">
                    {% for evenement in derniers_evenements %}
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                {% if evenement.image %}
                                    <img src="{{ asset('uploads/images/events/' ~ evenement.image) }}" alt="{{ evenement.titre }}" class="card-img-top" style="max-height: 150px; object-fit: cover;">
                                {% endif %}
                                <div class="card-header bg-primary text-white">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="card-title mb-0 text-truncate">{{ evenement.titre }}</h5>
                                        <span class="badge bg-light text-dark">
                                            <i class="fas fa-users"></i> {{ evenement.participants|length }}
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="mb-2">
                                        <small class="text-muted">
                                            <i class="fas fa-calendar"></i> 
                                            {{ evenement.date|date('d/m/Y à H:i') }}
                                        </small>
                                    </div>
                                    <div class="mb-3">
                                        <small class="text-muted">
                                            <i class="fas fa-map-marker-alt"></i> 
                                            {{ evenement.lieu }}
                                        </small>
                                    </div>
                                    {% if evenement.description %}
                                        <p class="card-text">
                                            {{ evenement.description|length > 80 ? evenement.description|slice(0, 80) ~ '...' : evenement.description }}
                                        </p>
                                    {% endif %}
                                </div>
                                <div class="card-footer bg-light">
                                    <div class="btn-group w-100" role="group">
                                        <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye"></i> Détails
                                        </a>
                                        <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </section>
        {% endif %}
    </div>
{% endblock %}