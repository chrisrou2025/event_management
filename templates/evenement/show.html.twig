
{% extends 'base.html.twig' %}

{% block title %}Événement - {{ evenement.titre }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h1 class="h3 mb-0">{{ evenement.titre }}</h1>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Date :</strong></div>
                            <div class="col-sm-9">{{ evenement.date|date('d/m/Y à H:i') }}</div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Lieu :</strong></div>
                            <div class="col-sm-9">{{ evenement.lieu }}</div>
                        </div>
                        
                        {% if evenement.description %}
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Description :</strong></div>
                            <div class="col-sm-9">{{ evenement.description|nl2br }}</div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h3 class="h5 mb-0">Participants inscrits ({{ evenement.participants|length }})</h3>
                    </div>
                    <div class="card-body">
                        {% if evenement.participants|length > 0 %}
                            <div class="list-group list-group-flush">
                                {% for participant in evenement.participants %}
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>{{ participant.prenom }} {{ participant.nom }}</strong><br>
                                        <small class="text-muted">{{ participant.email }}</small>
                                    </div>
                                    <a href="{{ path('app_participant_show', {'id': participant.id}) }}" 
                                       class="btn btn-sm btn-outline-primary">Voir</a>
                                </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-muted text-center">Aucun participant inscrit pour le moment.</p>
                        {% endif %}
                    </div>
                </div>
                
                {# Bouton d'inscription rapide (bonus) #}
                <div class="mt-3">
                    <a href="{{ path('app_participant_new') }}?evenement={{ evenement.id }}" 
                       class="btn btn-success btn-block">Inscrire un nouveau participant</a>
                </div>
            </div>
        </div>
        
        <div class="mt-4">
            <a href="{{ path('app_evenement_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-primary">Modifier</a>
            
            {# Formulaire de suppression #}
            {{ include('evenement/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}