{% extends 'base.html.twig' %}

{% block title %}Gestion des événements{% endblock %}

{% block body %}
    <div class="container mt-4">
        {# En-tête #}
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <i class="fas fa-calendar-alt fa-2x text-primary"></i>
                    </div>
                    <div>
                        <h1 class="h2 mb-1">Gestion des événements</h1>
                        <p class="text-muted mb-0">Organisez et gérez tous vos événements</p>
                    </div>
                </div>
            </div>
        </div>

        {# Barre d'actions #}

        {% if evenements|length > 0 %}
            {# Tri des événements : à venir d'abord #}
            {% set evenements_avenir = [] %}
            {% set evenements_passes = [] %}
            {% for evenement in evenements %}
                {% if evenement.date >= date() %}
                    {% set evenements_avenir = evenements_avenir|merge([evenement]) %}
                {% else %}
                    {% set evenements_passes = evenements_passes|merge([evenement]) %}
                {% endif %}
            {% endfor %}

            {# Section des événements à venir #}
            {% if evenements_avenir|length > 0 %}
            <section class="mb-5">
                <div class="d-flex align-items-center mb-3">
                    <h3 class="h4 mb-0">
                        <span class="badge bg-success me-2">{{ evenements_avenir|length }}</span>
                        Événements à venir
                    </h3>
                </div>
                <div class="row">
                    {% for evenement in evenements_avenir %}
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 shadow-sm border-start border-success border-3">
                            {% if evenement.image %}
                                <img src="{{ asset('uploads/images/events/' ~ evenement.image) }}" alt="{{ evenement.titre }}" class="card-img-top" style="max-height: 150px; object-fit: cover;">
                            {% endif %}
                            <div class="card-header bg-success bg-gradient text-white">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="card-title mb-0 text-truncate">{{ evenement.titre }}</h5>
                                    <span class="badge bg-light text-dark">
                                        <i class="fas fa-users"></i> {{ evenement.participants|length }}
                                    </span>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="mb-2">
                                    <small class="text-success fw-bold">
                                        <i class="fas fa-calendar"></i> 
                                        {{ evenement.date|date('d/m/Y à H:i') }}
                                    </small>
                                </div>
                                <div class="mb-3">
                                    <small class="text-muted">
                                        <i class="fas fa-map-marker-alt"></i> 
                                        {{ evenement.lieu }}
                                    </small>
                                </div>
                                
                                {% if evenement.description %}
                                <p class="card-text">
                                    {{ evenement.description|length > 80 ? evenement.description|slice(0, 80) ~ '...' : evenement.description }}
                                </p>
                                {% endif %}

                                {# Indicateur de proximité #}
                                {% set jours_restants = date(evenement.date).diff(date()).days %}
                                {% if jours_restants == 0 %}
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-clock"></i> Aujourd'hui
                                    </span>
                                {% elseif jours_restants <= 7 %}
                                    <span class="badge bg-info">
                                        <i class="fas fa-hourglass-half"></i> Dans {{ jours_restants }} jour(s)
                                    </span>
                                {% endif %}
                            </div>
                            <div class="card-footer bg-white">
                                <div class="btn-group w-100" role="group">
                                    <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="btn btn-outline-success btn-sm">
                                        <i class="fas fa-eye"></i> Détails
                                    </a>
                                    <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </section>
            {% endif %}

            {# Section des événements passés #}
            {% if evenements_passes|length > 0 %}
            <section class="mb-5">
                <div class="d-flex align-items-center mb-3">
                    <h3 class="h4 mb-0">
                        <span class="badge bg-secondary me-2">{{ evenements_passes|length }}</span>
                        Événements passés
                    </h3>
                </div>
                <div class="row">
                    {% for evenement in evenements_passes %}
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 shadow-sm opacity-75">
                            {% if evenement.image %}
                                <img src="{{ asset('uploads/images/events/' ~ evenement.image) }}" alt="{{ evenement.titre }}" class="card-img-top" style="max-height: 150px; object-fit: cover;">
                            {% endif %}
                            <div class="card-header bg-secondary text-white">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="card-title mb-0 text-truncate">{{ evenement.titre }}</h5>
                                    <span class="badge bg-light text-dark">
                                        <i class="fas fa-users"></i> {{ evenement.participants|length }}
                                    </span>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar"></i> 
                                        {{ evenement.date|date('d/m/Y à H:i') }}
                                    </small>
                                </div>
                                <div class="mb-3">
                                    <small class="text-muted">
                                        <i class="fas fa-map-marker-alt"></i> 
                                        {{ evenement.lieu }}
                                    </small>
                                </div>
                                
                                {% if evenement.description %}
                                <p class="card-text text-muted">
                                    {{ evenement.description|length > 80 ? evenement.description|slice(0, 80) ~ '...' : evenement.description }}
                                </p>
                                {% endif %}

                                <span class="badge bg-secondary">
                                    <i class="fas fa-history"></i> Terminé
                                </span>
                            </div>
                            <div class="card-footer bg-light">
                                <div class="btn-group w-100" role="group">
                                    <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" 
                                       class="btn btn-outline-secondary btn-sm">
                                        <i class="fas fa-eye"></i> Consulter
                                    </a>
                                    <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" 
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </section>
            {% endif %}

        {% else %}
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center py-5">
                            <div class="mb-4">
                                <i class="fas fa-calendar-times fa-4x text-muted"></i>
                            </div>
                            <h4 class="text-muted mb-3">Aucun événement créé</h4>
                            <p class="text-muted mb-4">
                                Vous n'avez pas encore créé d'événements. 
                                Commencez dès maintenant à organiser vos premiers événements !
                            </p>
                            <div class="d-grid gap-2 d-md-block">
                                <a href="{{ path('app_evenement_new') }}" class="btn btn-success btn-lg">
                                    <i class="fas fa-plus-circle"></i> Créer mon premier événement
                                </a>
                                <a href="{{ path('homepage') }}" class="btn btn-outline-primary btn-lg">
                                    <i class="fas fa-home"></i> Retour à l'accueil
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}