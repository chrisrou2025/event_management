
{% extends 'base.html.twig' %}

{% block title %}Participant - {{ participant.prenom }} {{ participant.nom }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h1 class="h3 mb-0">{{ participant.prenom }} {{ participant.nom }}</h1>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Prénom :</strong></div>
                            <div class="col-sm-9">{{ participant.prenom }}</div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Nom :</strong></div>
                            <div class="col-sm-9">{{ participant.nom }}</div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-sm-3"><strong>Email :</strong></div>
                            <div class="col-sm-9">
                                <a href="mailto:{{ participant.email }}">{{ participant.email }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h3 class="h5 mb-0">Événements inscrits ({{ participant.evenements|length }})</h3>
                    </div>
                    <div class="card-body">
                        {% if participant.evenements|length > 0 %}
                            <div class="list-group list-group-flush">
                                {% for evenement in participant.evenements %}
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">{{ evenement.titre }}</h6>
                                        <small class="text-muted">{{ evenement.date|date('d/m/Y') }}</small>
                                    </div>
                                    <p class="mb-1 text-muted">{{ evenement.lieu }}</p>
                                    <div class="mt-2">
                                        <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" 
                                           class="btn btn-sm btn-outline-primary">Voir l'événement</a>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-muted text-center">Ce participant n'est inscrit à aucun événement.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        
        <div class="mt-4">
            <a href="{{ path('app_participant_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_participant_edit', {'id': participant.id}) }}" class="btn btn-primary">Modifier</a>
            
            {# Formulaire de suppression #}
            {{ include('participant/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}